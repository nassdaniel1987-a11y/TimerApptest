<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Titel -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⏰ Nächste Timer"
            android:textColor="#64B5F6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Refresh Button -->
        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/widget_button_background"
            android:src="@drawable/ic_refresh"
            android:scaleType="centerInside"
            android:contentDescription="Aktualisieren" />
    </LinearLayout>

    <!-- Timer Liste -->
    <LinearLayout
        android:id="@+id/widget_timer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Timer 1 -->
        <LinearLayout
            android:id="@+id/timer_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/timer_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#81C784"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timer_category_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#424242" />
        </LinearLayout>

        <!-- Timer 2 -->
        <LinearLayout
            android:id="@+id/timer_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/timer_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#81C784"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timer_category_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#424242" />
        </LinearLayout>

        <!-- Timer 3 -->
        <LinearLayout
            android:id="@+id/timer_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/timer_name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#81C784"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timer_category_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#424242" />
        </LinearLayout>

        <!-- Timer 4 -->
        <LinearLayout
            android:id="@+id/timer_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/timer_name_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer_time_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#81C784"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timer_category_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#424242" />
        </LinearLayout>

        <!-- Timer 5 -->
        <LinearLayout
            android:id="@+id/timer_item_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingVertical="4dp">

            <TextView
                android:id="@+id/timer_name_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timer_time_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#81C784"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timer_category_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#424242" />
        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/widget_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keine Timer"
                android:textColor="#9E9E9E"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tippe zum Erstellen"
                android:textColor="#64B5F6"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
